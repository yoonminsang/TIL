{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "target": "ES2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {},
    //"verbatimModuleSyntax": true,
    "typeRoots": ["./types", "./node_modules/@types"],
    "allowJs": true,
    "strictNullChecks": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true
  },
  "exclude": ["node_modules", "dist"]
}
