{
  "extends": ["next/core-web-vitals", "plugin:storybook/recommended"],
  "rules": {
    "no-restricted-imports": [
      "error",
      {
        "patterns": [
          {
            "group": ["@/apis/*"]
          },
          {
            "group": ["@/components/*"]
          },
          {
            "group": ["@/config/*"]
          },
          {
            "group": ["@/domain/*/*"]
          },
          {
            "group": ["@/hooks/common/*"]
          },
          {
            "group": ["@/pages/*"]
          },
          {
            "group": ["@/utils/*"]
          }
        ]
      }
    ]
  }
}
