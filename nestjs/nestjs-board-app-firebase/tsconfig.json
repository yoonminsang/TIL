{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "outDir": "./dist",
    "skipLibCheck": true,
    "sourceMap": true,

    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,

    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "incremental": true,

    "removeComments": true,

    "strict": true,
    "noImplicitAny": false,

    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  }
}
